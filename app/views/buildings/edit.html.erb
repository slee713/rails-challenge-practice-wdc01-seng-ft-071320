<h1>Update Building Details</h1>

<% if !@building.errors.empty? %>
    <% @building.errors.full_messages.each do |error| %>
        <%= error %>
    <%end %>
<% end %>

<%= form_for @building do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :country %>
    <%= f.text_field :country %><br>
    <%= f.label :address %>
    <%= f.text_field :address %><br>
    <%= f.label :rent_per_floor %>
    <%= f.number_field :rent_per_floor %><br>
    <%= f.label :number_of_floors %>
    <%= f.number_field :number_of_floors %><br>
    <%= f.submit "Update Building" %>
    <%end %>
