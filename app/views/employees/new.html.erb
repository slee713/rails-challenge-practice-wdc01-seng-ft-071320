<h1> Add Employee </h1>
<% if !@employee.errors.empty? %>
    <% @employee.errors.full_messages.each do |error| %>
        <%= error %>
    <%end%>
<%end %>

<%= form_for @employee do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    <%= f.label :company_id %>
    <%= f.collection_select(:company_id, Company.all, :id, :name) %>  <br>
    <%= f.submit "Add Employee" %>
<% end %>
